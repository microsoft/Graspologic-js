{
	"name": "@graspologic/monorepo",
	"version": "0.4.0",
	"private": true,
	"description": "Efficient WebGL-based Graph Data visualization + React Componentry",
	"repository": "https://github.com/microsoft/Graspologic-js",
	"author": "Chris Trevino (chtrevin@microsoft.com)",
	"contributors": [
		"David Tittsworth (datittsw@microsoft.com)",
		"Nathan Evans (naevans@microsoft.com)"
	],
	"license": "MIT",
	"scripts": {
		"preinstall": "npx only-allow yarn",
		"postinstall": "shx rm -rf node_modules/@types/react-native",
		"clean": "yarn workspaces foreach -piv run clean",
		"lint": "essex lint --docs",
		"unit_test": "essex test --coverage",
		"build": "yarn workspaces foreach -pivt run build",
		"bundle": "yarn workspaces foreach -pivt run bundle",
		"start": "yarn workspaces foreach -pivt run start",
		"prettify": "essex prettify",
		"release": "yarn workspaces foreach run publish --access public",
		"storybook": "yarn workspaces foreach -pivt --include @graspologic/stories run start",
		"git_revert_npmrc": "git checkout .npmrc",
		"git_is_clean": "essex git-is-clean",
		"audit": "essex audit",
		"ci": "run-s build lint unit_test git_revert_npmrc git_is_clean audit"
	},
	"engines": {
		"node": ">= 12",
		"pnpm": ">= 5"
	},
	"devDependencies": {
		"@commitlint/cli": "^9.1.2",
		"@essex/eslint-config": "^10.0.1",
		"@essex/jest-config": "^10.0.2",
		"@essex/prettier-config": "^10.0.0",
		"@essex/scripts": "^11.0.1",
		"@types/enzyme": "^3.10.5",
		"@types/invariant": "^2.2.33",
		"@typescript-eslint/eslint-plugin": "^3.7.0",
		"@typescript-eslint/parser": "^3.7.0",
		"applicationinsights": "^1.8.2",
		"colors": "^1.4.0",
		"dts-bundle": "^0.7.3",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.2",
		"husky": "^4.2.5",
		"jest-webgl-canvas-mock": "^0.2.3",
		"lint-staged": "^10.3.0",
		"npm-run-all": "^4.1.5",
		"rollup": "^2.22.2",
		"shx": "^0.3.2",
		"typedoc-plugin-markdown": "^2.3.1",
		"typescript": "3.9.7"
	},
	"resolutions": {
		"@types/vfile-message": "1.0.1",
		"@types/react-native": "npm:@types/react@*"
	},
	"workspaces": [
		"packages/*/*"
	],
	"prettier": "@essex/prettier-config",
	"husky": {
		"hooks": {
			"pre-commit": "essex pre-commit",
			"commit-msg": "essex commit-msg"
		}
	},
	"dependencies": {
		"@yarnpkg/pnpify": "^2.3.3"
	}
}
